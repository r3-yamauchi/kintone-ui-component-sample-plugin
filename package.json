{
  "name": "kintone-ui-component-sample-plugin",
  "description": "kintone UI Componentの様々なコンポーネントを体験できるデモプラグイン",
  "version": "1.0.0",
  "scripts": {
    "start": "node scripts/npm-start.js",
    "upload": "cli-kintone plugin upload --input dist/plugin.zip --watch",
    "develop": "npm run build -- --watch",
    "keygen": "cli-kintone plugin keygen --output private.ppk",
    "build": "cli-kintone plugin pack --private-key private.ppk --output dist/plugin.zip --input src/manifest.json",
    "lint": "eslint ."
  },
  "keywords": [
    "kintone",
    "plugin",
    "ui-component",
    "demo",
    "showcase"
  ],
  "author": {
    "name": "r3-yamauchi",
    "url": "https://yamauchi.win"
  },
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^25.0.0",
    "@kintone/cli": "^1.18.0",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5"
  }
}
